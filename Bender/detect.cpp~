#include "opencv2/opencv.hpp"

using namespace std;
using namespace cv;

Mat cuadro1, cuadro2, puntos;

int main(){
	int x, y;
	VideoCapture cap(0);
	for(;;){
		cap >> cuadro1;
		cvtColor(cuadro1,cuadro1, CV_RGB2GRAY);
		threshold(cuadro1, cuadro2, 100, 200, 1);
		for(y=0; y<480; y++){
			for(x=0; x<640; x++){
				puntos.at<unsigned char>(y, x) == cuadro2.at<uchar>(y,x);
				if(cuadro2.at<uchar>(y,x) == 200){
					cout << "NEGRO" << " [ " << x << " ] [ " << y << " ] " << endl;			
				}		
			}
		}
	}
}
