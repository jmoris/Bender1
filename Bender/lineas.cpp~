/* --------------------> CALIBRAR THRESHOLD <-------------------- */

#include "opencv2/opencv.hpp"
#include <string>

using namespace cv;
using namespace std;

Mat cuadro;
int main(){
	VideoCapture cap(1);
	namedWindow("Original");
	
	for(;;){
		cap >> cuadro;
		imshow("Original", cuadro);	
		if(waitKey(50) >= 0) break; // SALIR AL APRETAR EL ESCAPE
	}
}
